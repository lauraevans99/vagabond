
<div class="jumbotron">

<h1> <%= @city.name %> </h1>

<img src=<%= @city.img %> alt="City Images" style="width:600px;height:auto;">
</div>

<% @posts.each do |p| %> 
<div class="well text-center col-md-6 col-md-offset-3">
	<h2><%= User.find(p.user_id).alias %></h2>
	<h3><%= p.title %> </h3>
	<h4><%= p.body %> </h4>

	<% if User.find(p.user_id).id == @user.id %>
		<button><a href="/users/<%=User.find(p.user_id).id%>/posts/<%=p.id%>">Edit/Delete</a></button>
	<% end %>

</div>
<div class="well">
	<% @comment = Comment.where(:post_id == p.id) %>
	<h4><%= @comment.body %></h4>

</div>
<% end %>