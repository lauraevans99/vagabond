<div class="col-md-6 col-md-offset-3 text-center" id="posts_holder">
	<form method="post" action="/users/<%= @user.id %>/posts">
		<legend><h3>Add Post</h3></legend>
		<%= form_for [@user, @post] do |f| %>
		<% flash.each do |name, msg| -%>
	      <%= content_tag :div, msg, class: name %>
	    <% end -%>
		<div class="form-group">
			<label class="col-sm-12 col-md-12 col-lg-12 col-xl-12 control-label" for=""><h3>Title</h3></label>
			<%= f.text_field :title, placeholder: "Title", class: "form-control input-lg" %>
		</div>
		<div class="form-group">
			<label class="col-sm-12 col-md-12 col-lg-12 col-xl-12 control-label" for=""><h3>Body</h3></label>
			<%= f.text_area :body, placeholder: "Body", class: "form-control input-lg" %>
		</div>
		<div class="form-group">
			<label class="col-sm-12 col-md-12 col-lg-12 col-xl-12 control-label" for=""><h3>City</h3></label>
			<%= f.collection_select(:city_id, City.all, :id, :name, {:class => "posts_select_city"}) %>
		</div>
			<%= f.hidden_field :user_id, :value => @user.id %>
			<button type="submit" class="btn btn-primary">Add Post</button>
			<!-- <%= f.submit "Add Post" %> -->
		<% end %>
	</form>
</div>